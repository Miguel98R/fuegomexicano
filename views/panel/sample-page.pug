doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    title Modernize Free
    link(rel='shortcut icon', type='image/png', href='../assets/images/logos/favicon.png')
    link(rel='stylesheet', href='../assets/css/styles.min.css')
  body
    .page-wrapper#main-wrapper(data-layout='vertical', data-navbarbg='skin6', data-sidebartype='full', data-sidebar-position='fixed', data-header-position='fixed')
      aside.left-sidebar
        div
          .brand-logo.d-flex.align-items-center.justify-content-between
            a.text-nowrap.logo-img(href='./index ')
              img(src='../assets/images/logos/dark-logo.svg', width='180', alt)
            .close-btn.d-xl-none.d-block.sidebartoggler.cursor-pointer#sidebarCollapse
              i.ti.ti-x.fs-8
          nav.sidebar-nav.scroll-sidebar(data-simplebar)
            ul#sidebarnav
              li.nav-small-cap
                i.ti.ti-dots.nav-small-cap-icon.fs-4
                |  
                span.hide-menu Home
              li.sidebar-item
                a.sidebar-link(href='./index ', aria-expanded='false')
                  span
                    i.ti.ti-layout-dashboard
                    |  
                  span.hide-menu Dashboard
              li.nav-small-cap
                i.ti.ti-dots.nav-small-cap-icon.fs-4
                |  
                span.hide-menu UI COMPONENTS
              li.sidebar-item
                a.sidebar-link(href='./ui-buttons ', aria-expanded='false')
                  span
                    i.ti.ti-article
                    |  
                  span.hide-menu Buttons
              li.sidebar-item
                a.sidebar-link(href='./ui-alerts ', aria-expanded='false')
                  span
                    i.ti.ti-alert-circle
                    |  
                  span.hide-menu Alerts
              li.sidebar-item
                a.sidebar-link(href='./ui-card ', aria-expanded='false')
                  span
                    i.ti.ti-cards
                    |  
                  span.hide-menu Card
              li.sidebar-item
                a.sidebar-link(href='./ui-forms ', aria-expanded='false')
                  span
                    i.ti.ti-file-description
                    |  
                  span.hide-menu Forms
              li.sidebar-item
                a.sidebar-link(href='./ui-typography ', aria-expanded='false')
                  span
                    i.ti.ti-typography
                    |  
                  span.hide-menu Typography
              li.nav-small-cap
                i.ti.ti-dots.nav-small-cap-icon.fs-4
                |  
                span.hide-menu AUTH
              li.sidebar-item
                a.sidebar-link(href='./authentication-login ', aria-expanded='false')
                  span
                    i.ti.ti-login
                    |  
                  span.hide-menu Login
              li.sidebar-item
                a.sidebar-link(href='./authentication-register ', aria-expanded='false')
                  span
                    i.ti.ti-user-plus
                    |  
                  span.hide-menu Register
              li.nav-small-cap
                i.ti.ti-dots.nav-small-cap-icon.fs-4
                |  
                span.hide-menu EXTRA
              li.sidebar-item
                a.sidebar-link(href='./icon-tabler ', aria-expanded='false')
                  span
                    i.ti.ti-mood-happy
                    |  
                  span.hide-menu Icons
              li.sidebar-item
                a.sidebar-link(href='./sample-page ', aria-expanded='false')
                  span
                    i.ti.ti-aperture
                    |  
                  span.hide-menu Sample Page
            .unlimited-access.hide-menu.bg-light-primary.position-relative.mb-7.mt-5.rounded
              .d-flex
                .unlimited-access-title.me-3
                  h6.fw-semibold.fs-4.mb-6.text-dark.w-85 Upgrade to pro
                  a.btn.btn-primary.fs-2.fw-semibold.lh-sm(href='https://adminmart.com/product/modernize-bootstrap-5-admin-template/', target='_blank') Buy Pro
                .unlimited-access-img
                  img.img-fluid(src='../assets/images/backgrounds/rocket.png', alt)
      .body-wrapper
        header.app-header
          nav.navbar.navbar-expand-lg.navbar-light
            ul.navbar-nav
              li.nav-item.d-block.d-xl-none
                a.nav-link.sidebartoggler.nav-icon-hover#headerCollapse(href='javascript:void(0)')
                  i.ti.ti-menu-2
              li.nav-item
                a.nav-link.nav-icon-hover(href='javascript:void(0)')
                  i.ti.ti-bell-ringing
                  .notification.bg-primary.rounded-circle
            .navbar-collapse.justify-content-end.px-0#navbarNav
              ul.navbar-nav.flex-row.ms-auto.align-items-center.justify-content-end
                a.btn.btn-primary(href='https://adminmart.com/product/modernize-free-bootstrap-admin-dashboard/', target='_blank') Download Free
                li.nav-item.dropdown
                  a.nav-link.nav-icon-hover#drop2(href='javascript:void(0)', data-bs-toggle='dropdown', aria-expanded='false')
                    img.rounded-circle(src='../assets/images/profile/user-1.jpg', alt, width='35', height='35')
                  .dropdown-menu.dropdown-menu-end.dropdown-menu-animate-up(aria-labelledby='drop2')
                    .message-body
                      a.d-flex.align-items-center.gap-2.dropdown-item(href='javascript:void(0)')
                        i.ti.ti-user.fs-6
                        p.mb-0.fs-3 My Profile
                      a.d-flex.align-items-center.gap-2.dropdown-item(href='javascript:void(0)')
                        i.ti.ti-mail.fs-6
                        p.mb-0.fs-3 My Account
                      a.d-flex.align-items-center.gap-2.dropdown-item(href='javascript:void(0)')
                        i.ti.ti-list-check.fs-6
                        p.mb-0.fs-3 My Task
                      a.btn.btn-outline-primary.mx-3.mt-2.d-block(href='./authentication-login ') Logout
        .container-fluid
          .card
            .card-body
              h5.card-title.fw-semibold.mb-4 Sample Page
              p.mb-0 This is a sample page
    script(src='../assets/libs/jquery/dist/jquery.min.js')
    script(src='../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js')
    script(src='../assets/js/sidebarmenu.js')
    script(src='../assets/js/app.min.js')
    script(src='../assets/libs/simplebar/dist/simplebar.js')