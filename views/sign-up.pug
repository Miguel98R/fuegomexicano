doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    meta(name='description', content)
    meta(name='author', content)
    title Tooplate's Little Fashion - Sign Up Page
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin)
    link(href='https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;700;900&display=swap', rel='stylesheet')
    link(href='/public/css/bootstrap.min.css', rel='stylesheet')
    link(href='/public/css/bootstrap-icons.css', rel='stylesheet')
    link(rel='stylesheet', href='/public/css/slick.css')
    link(href='/public/css/tooplate-little-fashion.css', rel='stylesheet')
  body
    section.preloader
      .spinner
        span.sk-inner-circle
    main
      section.sign-in-form.section-padding
        .container
          .row
            .col-lg-8.mx-auto.col-12
              h1.hero-title.text-center.mb-5 Sign Up
              .social-login.d-flex.flex-column.w-50.m-auto
                a.btn.custom-btn.social-btn.mb-4(href='#')
                  i.bi.bi-google.me-3
                  |  Continue with Google 
                a.btn.custom-btn.social-btn(href='#')
                  i.bi.bi-facebook.me-3
                  |  Continue with Facebook
              .div-separator.w-50.m-auto.my-5
                span or
              .row
                .col-lg-8.col-11.mx-auto
                  form(role='form', method='post')
                    .form-floating
                      input#email.form-control(type='email', name='email', pattern='[^ @]*@[^ @]*', placeholder='Email address', required)
                      |  
                      label(for='email') Email address
                    .form-floating.my-4
                      input#password.form-control(type='password', name='password', pattern='[0-9a-zA-Z]{4,10}', placeholder='Password', required)
                      |  
                      label(for='password') Password
                      p.text-center * shall include 0-9 a-z A-Z in 4 to 10 characters
                    .form-floating
                      input#confirm_password.form-control(type='password', name='confirm_password', pattern='[0-9a-zA-Z]{4,10}', placeholder='Password', required)
                      |  
                      label(for='confirm_password') Password Confirmation
                    button.btn.custom-btn.form-control.mt-4.mb-3(type='submit') Create account
                    p.text-center
                      | Already have an account? Please 
                      a(href='sign-in ') Sign In
    footer.site-footer
      .container
        .row
          .col-lg-3.col-10.me-auto.mb-4
            h4.text-white.mb-3
              a(href='index ') Little
              |  Fashion
            p.copyright-text.text-muted.mt-lg-5.mb-4.mb-lg-0
              | Copyright Â© 2022 
              strong Little Fashion
            br
            p.copyright-text
              | Designed by 
              a(href='https://www.tooplate.com/', target='_blank') Tooplate
          .col-lg-5.col-8
            h5.text-white.mb-3 Sitemap
            ul.footer-menu.d-flex.flex-wrap
              li.footer-menu-item
                a.footer-menu-link(href='about ') Story
              li.footer-menu-item
                a.footer-menu-link(href='#') Products
              li.footer-menu-item
                a.footer-menu-link(href='#') Privacy policy
              li.footer-menu-item
                a.footer-menu-link(href='#') FAQs
              li.footer-menu-item
                a.footer-menu-link(href='#') Contact
          .col-lg-3.col-4
            h5.text-white.mb-3 Social
            ul.social-icon
              li
                a.social-icon-link.bi-youtube(href='#')
              li
                a.social-icon-link.bi-whatsapp(href='#')
              li
                a.social-icon-link.bi-instagram(href='#')
              li
                a.social-icon-link.bi-skype(href='#')
    script(src='/public/js/jquery.min.js')
    script(src='/public/js/bootstrap.bundle.min.js')
    script(src='/public/js/Headroom.js')
    script(src='/public/js/jQuery.headroom.js')
    script(src='/public/js/slick.min.js')
    script(src='/public/js/custom.js')