doctype html
html(lang='es')
    head
        include templates/head
        include templates/styles
    body
        include templates/spinner
        main
            include templates/nav
            header.site-header.section-padding.d-flex.justify-content-center.align-items-center
                .container
                    .row
                        .col-lg-6.col-12.header-info.text-center
                            h1.display-2.text-danger

                                | Finalizar compra
            seccion
                .container

                    div.my-4.py-3
                        h5.text-white.fw-lighter
                            | Detalle de la venta
                        .row
                            .col-12.col-md-8
                                div(style='overflow-y: auto; max-height: 600px;')
                                    .row#products_table

                            .col-12.col-md-4
                                .row
                                    .col-6
                                        p No.Productos
                                    .col-6
                                        p#no_products 2
                                .row
                                    .col-6
                                        p Envi√≥
                                    .col-6
                                        p.text-success Gratis
                                .row
                                    .col-6
                                        p Total a pagar
                                    .col-6
                                        p#total 2
                                div.py-2
                                    h6.text-white.fw-lighter
                                        | Adjuntar archivo
                                    div
                                         input#img_payment.form-control.me-1(type='file')
                                         input#img_payment_save.form-control.me-1(type='text' style="display:none;")

                                    button.my-5.btn.btn-success#savePayment
                                        | Enviar comprobante













        div#template_products_check_.col-12.my-1(style="display:none;")
            .row
                .col-8.text-center
                    img#img_product_(style="max-height:180px;border-radius:10px;").img-fluid
                    div
                        p.my-2#name_product_
                        p $
                            span#price_unit_

                .col-2
                    .form-group(style='background-color: black;')
                        label.text-danger(style='color: white;') Cantidad:
                        p.text-center.w-75.my-1#quantity_(type="number" min="1" style='background-color: black; color: white;')

                .col-2
                    label.text-danger(style='color: white;')  Total del producto:
                    p $
                        span#total_product_


        include templates/footer
        include templates/scripts
        script.

            let ID = '!{id}';
        script(src=`/public/js/jsWeb/common.js?v=${Math.random()}`)
        script(src=`/public/js/jsWeb/checkout_payment.js?v=${Math.random()}`)